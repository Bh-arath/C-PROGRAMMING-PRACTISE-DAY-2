#include<stdio.h>
int main(){
int 
a[100][100],b[100][100],sum[100][100],rows,col,i,j;
printf("Enter the No.Of Rows : ");
scanf("%d",&rows);
printf("Enter the No.Of Columns : ");
scanf("%d",&col);
printf("Enter the Elements in the First Matrix : \n");
for(i=0;i<rows;++i){
for(j=0;j<col;++j){
printf("Enter : ");
scanf("%d",&a[i][j]);
} }
printf("\n");
printf("Enter the Elements in the Second Matrix : \n");
for(i=0;i<rows;i++){
for(j=0;j<col;j++){
printf("Enter : ");
scanf("%d",&b[i][j]);
} }
printf("\n");
printf("The First Matrix : \n");
for(i=0;i<rows;i++){
for(j=0;j<col;j++){
printf("%d\t",a[i][j]);
}
printf("\n");
}
printf("\n");
printf("The Second Matrix : \n");
for(i=0;i<rows;i++){
for(j=0;j<col;j++){
printf("%d\t",b[i][j]);
}
printf("\n");
}
for(i=0;i<rows;i++){
for(j=0;j<col;j++){
sum[i][j] = a[i][j] + b[i][j];
} }
printf("\n");
printf("The Sum Matrix is : \n");
for(i=0;i<rows;i++){
for(j=0;j<col;j++){
printf("%d\t",sum[i][j]);
}
printf("\n");
}
return 0;
}
